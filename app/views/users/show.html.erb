<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
	<div class="flex flex-col bg-white shadow-md px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-3xl w-50 max-w-md">
		<div class="font-medium self-center text-xl sm:text-3xl text-gray-800">
			<%= t( 'common.details_user' ) %>
		</div>

		<div class="mt-5">
			<%= form_with model: @user do | form | %>
				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-tag text-blue-500"></i>
						</div>
						<input type="text" class="text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" disabled value="<%= @user.type_person.titleize %>">
					</div>
				</div>
				
				<hr class="mb-3">

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-id-card text-blue-500"></i>
						</div>
						<%= form.text_field :identification, placeholder: t('common.rif'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", disabled: true %>
					</div>
				</div>

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<% if ( @user.type_person == 'natural' ) %>
								<i class="fa fa-user text-blue-500"></i>
							<% else %>
								<i class="fa fa-building text-blue-500"></i>
							<% end %>
						</div>
						<%= form.text_field :name, placeholder: t('common.reason'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", disabled: true %>
					</div>
				</div>
				<hr class="mt-3 mb-3">

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-at text-blue-500"></i>
						</div>
						<%= form.text_field :email, placeholder: t('common.email'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", disabled: true %>
					</div>
				</div>

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-phone text-blue-500"></i>
						</div>
						<%= form.text_field :tlf, placeholder: t('common.tlf'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", disabled: true %>
					</div>
				</div>

				<% if ( @user.tlf_second? ) %>
					<div class="flex flex-col mb-3">
						<div class="relative">
							<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
								<i class="fa fa-phone text-blue-500"></i>
							</div>
							<%= form.text_field :tlf_second, placeholder: t('common.tlf_second'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", disabled: true %>
						</div>
					</div>
				<% end %>
		
				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-calendar text-blue-500"></i>
						</div>
						<%= form.date_field :emit, max: Date.today, placeholder: t('common.emit'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", disabled: true %>
					</div>
				</div>

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-calendar text-blue-500" aria-hidden="true"></i>
						</div>
						<%= form.date_field :expiration, min: Date.today, placeholder: t('common.expired'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400", disabled: true %>
					</div>
				</div>
				<hr>
				<div class="flex w-full mt-2">
					<%= link_to t('common.edit_user'), edit_user_path( @user ), class: "flex mt-2 items-center justify-center focus:outline-none text-white text-sm sm:text-base bg-blue-500 hover:bg-blue-600 rounded-2xl py-2 w-full transition duration-150 ease-in"%>

					<%= link_to t('common.delete'), user_path( @user ), class: "flex mt-2 ml-3 items-center justify-center focus:outline-none text-white text-sm sm:text-base bg-red-500 hover:bg-red-600 rounded-2xl py-2 w-full transition duration-150 ease-in", data: {
						turbo_method: :delete,
						turbo_confirm: t('common.confirm_delet')
					}%>
				</div>
			<% end %>
		</div>
	</div>
</div>