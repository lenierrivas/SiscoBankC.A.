<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100">
	<div class="flex flex-col bg-white shadow-md px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-3xl w-50 max-w-md">
		<div class="font-medium self-center text-xl sm:text-3xl text-gray-800">
			<% if ( @user.name? ) %>
				<%= t('common.edit_users') %>
			<% else %>
				<%= t('common.new_user') %>
			<% end %>
		</div>

		<div class="mt-5">
			<%= form_with model: @user do | form | %>
				<%= turbo_frame_tag "type_person", data: { controller: "navigate" } do %>
					<div class="flex flex-wrap mb-3">
						<div class="flex items-center mr-4">
					        <%= form.radio_button :type_person, 'natural', data: { action: 'change->navigate#to', url: new_user_path({ user: { type_person: 'natural' } }) }, class: "w-4 h-4 text-red-600 bg-gray-100 border-gray-300 focus:ring-red-500 dark:focus:ring-red-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600", id: 'natural'%>
					        <label for="natural" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300"><%= t('common.person') %> Natural</label>
						</div>
						<div class="flex items-center mr-4">
					        <%= form.radio_button :type_person, 'jurídica', data: { action: 'change->navigate#to', url: new_user_path({ user: { type_person: 'jurídica' } }) }, class: "w-4 h-4 text-green-600 bg-gray-100 border-gray-300 focus:ring-green-500 dark:focus:ring-green-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600", id: 'jurídica'%>
					        <label for="jurídica" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300"><%= t('common.person') %> Juridica</label>
						</div>
						<% @user.errors.full_messages_for(:type_person).each do | error_message | %>
							<%= error_message %>.
						<% end %>
					</div>

				    <% if @user.natural? %>
	    				<div class="flex flex-col mb-3">
							<div class="relative">
								<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
									<i class="fa fa-id-card text-blue-500"></i>
								</div>
								<%= form.text_field :identification, placeholder: t('common.identification'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
							</div>
							<% @user.errors.full_messages_for(:identification).each do | error_message | %>
								<%= error_message %>.
							<% end %>
						</div>

						<div class="flex flex-col mb-3">
							<div class="relative">
								<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
									<i class="fa fa-user text-blue-500"></i>
								</div>
								<%= form.text_field :name, placeholder: t('common.name'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
							</div>
							<% @user.errors.full_messages_for(:name).each do | error_message | %>
								<%= error_message %>.
							<% end %>
						</div>

						<hr class="mt-3 mb-3">
				    <% end %>

		    	    <% if @user.jurídica? %>
	    				<div class="flex flex-col mb-3">
							<div class="relative">
								<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
									<i class="fa fa-id-card text-blue-500"></i>
								</div>
								<%= form.text_field :identification, placeholder: t('common.rif'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
							</div>
							<% @user.errors.full_messages_for(:identification).each do | error_message | %>
								<%= error_message %>.
							<% end %>
						</div>

						<div class="flex flex-col mb-3">
							<div class="relative">
								<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
									<i class="fa fa-building text-blue-500"></i>
								</div>
								<%= form.text_field :name, placeholder: t('common.reason'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
							</div>
							<% @user.errors.full_messages_for(:name).each do | error_message | %>
								<%= error_message %>.
							<% end %>
						</div>
						<hr class="mt-3 mb-3">
				    <% end %>
				<% end %>

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-at text-blue-500"></i>
						</div>
						<%= form.text_field :email, placeholder: t('common.email'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
					</div>
					<% @user.errors.full_messages_for(:email).each do | error_message | %>
						<%= error_message %>.
					<% end %>
				</div>

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-phone text-blue-500"></i>
						</div>
						<%= form.text_field :tlf, placeholder: t('common.tlf'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
					</div>
					<% @user.errors.full_messages_for(:tlf).each do | error_message | %>
						<%= error_message %>.
					<% end %>
				</div>

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-phone text-blue-500"></i>
						</div>
						<%= form.text_field :tlf_second, placeholder: t('common.tlf_second'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
					</div>
					<% @user.errors.full_messages_for(:tlf_second).each do | error_message | %>
						<%= error_message %>.
					<% end %>
				</div>

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-calendar text-blue-500"></i>
						</div>
						<%= form.date_field :emit, max: Date.today, placeholder: t('common.emit'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
					</div>
					<% @user.errors.full_messages_for(:emit).each do | error_message | %>
						<%= error_message %>.
					<% end %>
				</div>

				<div class="flex flex-col mb-3">
					<div class="relative">
						<div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
							<i class="fa fa-calendar text-blue-500" aria-hidden="true"></i>

						</div>
						<%= form.date_field :expiration, min: Date.today, placeholder: t('common.expired'), class: "text-sm placeholder-gray-500 pl-10 pr-4 rounded border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" %>
					</div>
					<% @user.errors.full_messages_for(:expiration).each do | error_message | %>
						<%= error_message %>.
					<% end %>
				</div>
				<hr>
				<div class="flex w-full">
					<%= form.submit t('common.save'), class: "flex mt-2 items-center justify-center focus:outline-none text-white text-sm sm:text-base bg-blue-500 hover:bg-blue-600 rounded-2xl py-2 w-full transition duration-150 ease-in"%>

					<%= link_to t('common.cancel'), users_path, class: "flex mt-2 ml-3 items-center justify-center focus:outline-none text-white text-sm sm:text-base bg-red-500 hover:bg-red-600 rounded-2xl py-2 w-full transition duration-150 ease-in"%>
				</div>
			<% end %>
		</div>
	</div>
</div>